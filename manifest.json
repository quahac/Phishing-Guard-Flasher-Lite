{
  "manifest_version": 2,
  "name": "Phishing Guard Flasher Lite",
  "version": "1.0",
  "description": "Flashes a customizable banner when visiting trusted sites. Tap the icon to mark or unmark a page. Customize appearance in settings.",
  "permissions": [
    "tabs",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "browser_action": {
    "default_icon": "icon.png",
    "default_title": "Mark as Trusted Site"
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "web_accessible_resources": [
    "options.html",
    "options.js"
  ]
}
